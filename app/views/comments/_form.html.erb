<div class="block">
  <div>
    <section style="max-width: 700px; margin: auto;">
      <%= simple_form_for([@project, @project.comments.build]) do |f| %>
        <%= f.error_notification %>
          <div class="field">
            <div class="control">
              <%= f.input :comment, input_html: { class: "textarea is-warning" }, wrapper: false %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.button :submit, class: "button is-outlined is-link" %>
            </div>
          </div>
        <% end %>
    </section>
  </div>
</div>